<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN" "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<!-- 前端處理控制 -->
<struts>
	<package name="front" namespace="/" extends="struts-default">
		<global-results>
			<result name="error">/WEB-INF/front/index.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping result="error" exception=""></exception-mapping>
		</global-exception-mappings>
		<action name="*" class="com.cpbuy.action.front.IndexAction"
			method="{1}">
			<result name="toIndex">/WEB-INF/front/index.jsp</result>
			<result name="toLogin">/WEB-INF/front/login.jsp</result>
		</action>
	</package>
</struts>